@{
    ViewData["Title"] = "Home Page";
}

<br />
<div class="text-center">
    <h1 class="display-4">Welcome to Borrow Books Anywhere!</h1><br />
    <div>
        <form asp-controller="Books" asp-action="SearchResults">
            <div class="form-inline justify-content-center">
                <div class="form-group mb-2">
                    <label for="SearchPhrase" class="control-label">Search a book in our library: </label>
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <input name="SearchPhrase" class="form-control" placeholder="Search by Title, Author, Publisher or Genre" size="50" />
                </div>
                <div class="form-group mb-2">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <br /><br /><br />
</div>
<div class="full-width" style="background-image: url('/Images/reading left.PNG');">
    <br /><br /><br /><br /><br />
    Borrow your book anywhere <br />Read your book anywhere
</div>
