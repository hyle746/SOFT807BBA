<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Borrow Books Anywhere</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400&family=Ubuntu:wght@300&display=swap" rel="stylesheet">
</head>
<body style="font-family: 'Ubuntu', sans-serif;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/Images/empty book cover.png" style="width:60px;height:60px; padding-right:10px" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Borrow Books Anywhere</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item over">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item over">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item over">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item over">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">Booklist</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="height:100vh">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            <div class="row">
                <br />
                <div class="col-sm">
                    <p><b>Quick Links</b></p>
                    <a asp-area="" asp-controller="Books" asp-action="Index">Booklist</a> <br />
                </div>
                <div class="col-sm">
                    <a asp-area="" asp-controller="Home" asp-action="About"><b>About Us</b></a><br />
                </div>
                <div class="col-sm">
                    <a asp-area="" asp-controller="Home" asp-action="Contact"><b>Contact Us</b></a><br />
                </div>
                <div class="col-sm">
                    <b>SNS</b> <br />
                    <a href="https://www.facebook.com" target="_blank"><img src="~/Images/Facebook.png" width="24" height="24"></a>&nbsp;&nbsp;<a href="https://www.instagram.com" target="_blank"><img src="~/Images/Instagram.jpg" width="24" height="24"></a>&nbsp;&nbsp;<a href="https://www.twitter.com" target="_blank"><img src="~/Images/Twitter.png" width="24" height="24"></a><br />
                    &copy; 2022 - Hyunmoo Lee - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
